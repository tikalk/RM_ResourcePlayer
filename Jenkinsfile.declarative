pipeline
{
    options
    {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    agent
    {
        node
        {
            label 'linux-host-slave'
        }
    }
    stages
    {
        stage('SCM: code update')
        {
            steps
            {
                checkout([
                    $class: 'GitSCM', branches: [[name: 'master']],
                    userRemoteConfigs: [[url: 'git@github.com:tikalk/RM_ResourcePlayer.git',credentialsId:'ubuntu']]
                ])
            }
        }
        stage('Docker build')
        {
            steps
            {
                script
                {
                    docker.build("rm_resource_player")
                }
            }
        }
        stage('Docker push')
        {
            steps
            {
                script
                {
                    sh ("eval \$(aws ecr get-login --no-include-email --region eu-central-1 | sed 's|https://||')")
                    docker.withRegistry('http://329054710135.dkr.ecr.eu-central-1.amazonaws.com', 'ecr:eu-west-2:k8s-aws-ecr')
                    {
                        docker.image("rm_resource_player").push()
                    }
                }
            }
        }
    }
}
